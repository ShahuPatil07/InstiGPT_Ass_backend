  <h1 style="color: rgb(23, 2, 71);">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST" >
            <div class="form-group">
              <label for="email" style="color: rgb(23, 2, 71);">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password" style="color: rgb(23, 2, 71);">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark" style="color: rgb(23, 2, 71);background-color: white;">Register</button>
          </form>
      
        </div>
      </div>
    </div>

